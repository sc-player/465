<p>
  <%= image_tag @image.filename %>
</p>

<p>
  <%= User.find(@image.user_id).name %>
</p>

<p>
  <%=button_to "Make #{(@image.public) ? "Private" : "Public"}", image_path(@image, :image => { :public => !(@image.public)}), :method => :put%>
<p>
  <% @image.tags.each do |t| %>
    <%=t.str%>
    <%if owner%>
      <%=link_to 'Edit', edit_tag_path(t)%> |
      <%=link_to 'Destroy', t, method: :delete, data: {confirm: 'Are you sure?' } %>
    <%end%>
    <br>
  <% end %>
  <%=link_to "New Tag", new_image_tag_path(@image.id)%>
</p>
<% if owner%>
<%= link_to 'Edit', edit_image_path(@image) %> |
<% end %>
<%= link_to 'Back', images_path %>

