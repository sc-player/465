<!DOCTYPE html>
<html>
<head>
  <title>Tasks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="user_nav">
<% if user_signed_in? %>
  Signed in as <%= current_user.username %>. <%= link_to "View Profile", current_user, style: 'text-align:right !important;' %> <br>
  <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
<% end %>
</div>

<%= yield %>

</body>
</html>
