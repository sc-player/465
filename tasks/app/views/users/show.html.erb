<h1><%=current_user.username%>'s profile.</h1>

<%= image_tag current_user.avatar_path, size: "250x250" %>
<br>
<h3>Bio</h3><br>
<%= current_user.bio %>
<h3>Links</h3>
<ul>
  <% current_user.links.each do |l| %>
    <li>
      <%= link_to l.url, l.url, target: "_blank" %>
    </li>
  <% end %>
</ul>
<%= render 'link' %>
<%= link_to "Back", tasks_path %>
